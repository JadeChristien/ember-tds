{{page-title "Ex1"}}
<div class="container">

<div class="card">
  <div class="card-header bg-primary text-light">Ex1 : Note application</div>
  <div class="card-body">
    <b>Note :</b><br><br>
    <Textarea class="form-control" @placeholder="Entrez votre texte" @value={{this.content}} @maxlength=100 /><br>

    <button class="btn btn-primary" {{action "save"}}>Enregistrer</button>
    <button class="btn btn-primary" {{action "clear"}}>Effacer</button>

    <br><br>
    <div class="alert alert-info">Nombre de caract√®res restant : {{ this.size }}</div>

    {{#if this.visible}}
      {{#if this.enregistre}}
        <div class="alert {{this.style }}">{{@model.message2}}</div>
      {{else}}
        <div class="alert {{this.style }}">{{@model.message1}}</div>
      {{/if}}
    {{/if}}

  </div>
</div>

</div>
{{outlet}}