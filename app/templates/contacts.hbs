{{page-title "Contacts"}}
<div class="card">
  <div class="card-header bg-primary text-light">Contacts</div>
  <div class="card-body">
    <Input type="text" class="form-control" placeholder="Filtre" @value={{this.contenu}} {{on "keypress" update}}/><br>
  <table class="table table-striped">
    <tbody>
    {{#each @model.contacts as |contact|}}
      <tr>
        <td>{{contact.nom}}</td>
        <td>{{contact.prenom}}</td>
        <td>{{contact.email}}</td>
        <td>
          <LinkTo class="btn btn-info btn-sm" @route="contacts.update" @model={{ contact.id }} ><i class="fas fa-edit" style="color: white"></i></LinkTo>
          <button {{ action "delete" contact}} class="btn btn-danger btn-sm"><i class="far fa-trash-alt" style="color: white"></i></button>
        </td>
      </tr>
    {{/each}}
    </tbody>
    <tfoot>
    <tr>
      <td>
        <LinkTo @route="contacts.add" class="btn btn-primary">Ajouter</LinkTo>
        {{#if @model.deletedsCount}}
          <button class="btn btn-danger" {{action "cancelDeletion" @model.deleteds}}>Annuler la suppression ({{@model.deletedsCount}})</button>
          <button class="btn btn-success" {{action "confirmDeletion" @model.deleteds}}>Confirmer la suppression ({{@model.deletedsCount}})</button>
        {{/if}}
      </td>
    </tr>
    </tfoot>
  </table>
    {{outlet}}
  </div>
</div>
